[user]
	name = Hansen
	email = samhansen.dev@gmail.com

[core]
	compression = 9
	# prevents committing whitespaces
	whitespace = error
	preloadindex = true

[url "git@github.com:sammhansen/"]
	insteadOf = sh/

[url "https://github.com/"]
	insteadOf = gh/

[init]
	defaultBranch = dev

[status]
	branch = true
	stash = true
	showUntrackedFiles = all

[pager]
	diff = diff-so-fancy | $PAGER

[push]
  autoSetupRemote = true
  default = current

[pull]
  default = current
  rebase = true

[rebase]
  autoStash = true
  missingCommitsCheck = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
